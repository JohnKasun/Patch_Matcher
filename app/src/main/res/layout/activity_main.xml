<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="67dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/knob2"
        app:layout_constraintEnd_toEndOf="@+id/knob2"
        app:layout_constraintStart_toStartOf="@+id/knob2" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/trashcan" />

    <com.example.patch_matcher.RotaryKnobView
        android:id="@+id/knob"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        app:identifier="1"
        app:initialValue="0"
        app:knobDrawable="@drawable/rotaryknob"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.225"
        app:layout_constraintStart_toStartOf="parent"
        app:maxValue="10000"
        app:minValue="0" />

    <com.example.patch_matcher.RotaryKnobView
        android:id="@+id/knob2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        app:identifier="2"
        app:initialValue="0"
        app:knobDrawable="@drawable/rotaryknob"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:maxValue="25"
        app:minValue="0" />

    <com.example.patch_matcher.RotaryKnobView
        android:id="@+id/knob3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        app:identifier="3"
        app:initialValue="0"
        app:knobDrawable="@drawable/rotaryknob"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.747"
        app:layout_constraintStart_toStartOf="parent"
        app:maxValue="100"
        app:minValue="0" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="67dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/knob"
        app:layout_constraintEnd_toEndOf="@+id/knob"
        app:layout_constraintStart_toStartOf="@+id/knob" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/knob3"
        app:layout_constraintEnd_toEndOf="@+id/knob3"
        app:layout_constraintStart_toStartOf="@+id/knob3" />


</androidx.constraintlayout.widget.ConstraintLayout>